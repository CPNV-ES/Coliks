@model coliks.Models.Items

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <h4>Items</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Itemnb)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Itemnb)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand.Brandname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Returned)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Returned)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Serialnumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Serialnumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Description)
        </dd>
    </dl>
</div>
<div class="row">
    @if (Model.Renteditems.Count == 0)
    {
        <p class="text-body">Aucun contrats</p>
    }
    else
    {
        <h3>Contrats : </h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(Model => Model.Renteditems.First().Contract.Id)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Renteditems.First().Contract.Total)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Renteditems.First().Contract.Customer.Firstname)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Renteditems.First().Contract.Customer.Lastname)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rentedItems in Model.Renteditems)
                {
                    <tr>
                        <td><a href="/Contracts/Details/@rentedItems.Contract.Id">@rentedItems.Contract.Id</a></td>
                        <td>@rentedItems.Contract.Total</td>
                        <td><a href="/Customers/Details/@rentedItems.Contract.Customer.Id">@rentedItems.Contract.Customer.Firstname</td>
                        <td><a href="/Customers/Details/@rentedItems.Contract.Customer.Id">@rentedItems.Contract.Customer.Lastname</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Modifier</a> |
    <a asp-action="Index" class="btn btn-primary">Retourner &agrave; la liste</a>
</div>
