@model coliks.Models.Items

@{
    ViewData["Title"] = "Create";
}
<h1>Cr&eacute;er un article</h1>

<hr />
<form asp-action="Create" id="form">
    <div class="row">
        <div class="col">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2 row">
                <label asp-for="Itemnb" class="col-sm col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Itemnb" class="form-control" autocomplete="off" />
                </div>
                <span asp-validation-for="Itemnb" class="text-danger m-auto"></span>
            </div>
            <div class="form-group mb-2 row">
                <label asp-for="Brand" class="col-sm col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-2 row">
                <label asp-for="Model" class="col-sm col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-2 row">
                <label asp-for="Size" class="col-sm col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Size" class="form-control" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-2 row">
                <label asp-for="Category" class="col-sm col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="form-group mb-2 row">
                <label asp-for="Cost" class="col col-form-label"></label>
                <div class="col-8">
                    <input asp-for="Cost" class="form-control" />
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-2 row">
                <label asp-for="Returned" class="col col-form-label"></label>
                <div class="col-8">
                    <input asp-for="Returned" class="form-control" />
                    <span asp-validation-for="Returned" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-2 row">
                <label asp-for="Type" class="col col-form-label"></label>
                <div class="col-8">
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-2 row">
                <label asp-for="Stock" class="col col-form-label"></label>
                <div class="col-8">
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-2 row">
                <label asp-for="Serialnumber" class="col col-form-label"></label>
                <div class="col-8">
                    <input asp-for="Serialnumber" class="form-control" />
                    <span asp-validation-for="Serialnumber" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col mb-1 mt-1">
            <input type="button" value="Cr&eacute;er" class="btn btn-success" id="save" disabled />
        </div>
    </div>
</form>

<div class="row">
    <div class="col">
        <a asp-action="Index" class="btn btn-danger">Retourner &agrave; la liste</a>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/item.js"></script>