@model coliks.Models.Contracts

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Contracts</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">Nom</label>
                        @Html.DropDownList("Customers", ViewBag.CustomersLastName, "Nom", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">Prénom</label>
                        <select disabled class="form-control">
                            <option>Prénom</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">N° de téléphone</label>
                        <input class="form-control" disabled />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label class="control-label">Addresse</label>
                        <input class="form-control" disabled />
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-2 offset-10">
                        <button class="btn btn-primary">Nouveau contrat</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

